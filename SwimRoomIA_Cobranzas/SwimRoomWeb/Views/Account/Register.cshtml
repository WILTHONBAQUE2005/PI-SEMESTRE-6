@model SwimRoomWeb.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>CobranzasPro - Crear cuenta</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-page">

    <div class="login-card bg-white p-4 p-md-5">
        <div class="text-center mb-4">
            <h1 class="brand-title mb-1">
                <span class="brand-primary">Cobranzas</span><span class="brand-accent">Pro</span>
            </h1>
            <p class="text-muted mb-0">Crear nueva cuenta de analista</p>
        </div>

        <form asp-action="Register" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control login-input" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input asp-for="Apellido" class="form-control login-input" />
                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control login-input" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control login-input" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control login-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3 login-button">
                CREAR CUENTA
            </button>

            <div class="text-center small text-muted">
                ¿Ya tienes cuenta?
                <a asp-action="Login" class="text-decoration-none">Inicia sesión</a>
            </div>
        </form>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
