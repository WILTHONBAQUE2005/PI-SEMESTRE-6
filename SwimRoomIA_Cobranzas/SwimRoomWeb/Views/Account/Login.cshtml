@model SwimRoomWeb.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>CobranzasPro - Iniciar sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-page">

    <div class="login-card bg-white p-4 p-md-5">
        <div class="text-center mb-4">
            <h1 class="brand-title mb-1">
                <span class="brand-primary">Cobranzas</span><span class="brand-accent">Pro</span>
            </h1>
            <p class="text-muted mb-0">Portal de gestión predictiva</p>
        </div>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control login-input" placeholder="email@gmail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" class="form-control login-input" placeholder="Contraseña" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3 login-button">
                INICIAR SESIÓN
            </button>

            <div class="text-center small text-muted">
                <a href="#" class="text-decoration-none text-muted me-2">Olvidé mi contraseña</a> ·
    <a asp-controller="Account" asp-action="Register"
       class="text-decoration-none text-muted ms-2">No tengo una cuenta</a>
            </div>

            <div class="text-center mt-3 small text-muted">
                <strong>Demo:</strong> analista@cobranzaspro.com / Admin123*
            </div>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
