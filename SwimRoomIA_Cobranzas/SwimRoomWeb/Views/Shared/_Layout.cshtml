<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CobranzasPro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell d-flex">
        <!-- Sidebar -->
        <aside class="sidebar d-flex flex-column">
            <div class="sidebar-header d-flex align-items-center justify-content-between">
                <a asp-controller="VentasDiferidas" asp-action="Index" class="text-decoration-none">
                    <div class="brand-title mb-0">
                        <span class="brand-primary">Cobranzas</span><span class="brand-accent">Pro</span>
                    </div>
                    <div class="text-muted small">Portal de gestión predictiva</div>
                </a>
            </div>

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                string Active(string c, string a = "") =>
                    currentController == c && (string.IsNullOrEmpty(a) || currentAction == a)
                        ? "sidebar-link active"
                        : "sidebar-link";
            }

            <nav class="sidebar-menu mt-4 flex-grow-1">
                <a asp-controller="VentasDiferidas" asp-action="Index"
                   class="@Active("VentasDiferidas", "Index")">
                    <span class="sidebar-icon bi bi-speedometer2"></span>
                    <span>Dashboard</span>
                </a>
                <a asp-controller="Clientes" asp-action="Index"
                class="@Active("Clientes", "Index")">
                    <span class="sidebar-icon bi bi-people"></span>
                    <span>Clientes</span>
                </a>
                <a asp-controller="VentasDiferidas" asp-action="Create"
                   class="@Active("VentasDiferidas", "Create")">
                    <span class="sidebar-icon bi bi-plus-circle"></span>
                    <span>Registrar Venta / Obligación</span>
                </a>
                <a href="#" class="sidebar-link">
                    <span class="sidebar-icon bi bi-telephone-outbound"></span>
                    <span>Cobranzas</span>
                </a>
                <a asp-controller="VentasDiferidas" asp-action="Index"
                   class="sidebar-link">
                    <span class="sidebar-icon bi bi-graph-up-arrow"></span>
                    <span>Reportes</span>
                </a>
                <a href="#" class="sidebar-link">
                    <span class="sidebar-icon bi bi-gear"></span>
                    <span>Configuración</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center mb-2">
                        <div class="avatar-circle me-2">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <div>
                            <div class="small fw-semibold">@User.Identity.Name</div>
                            <div class="small text-muted">Analista</div>
                        </div>
                    </div>
                    <a asp-controller="Account" asp-action="Logout"
                       class="btn btn-sm btn-outline-light w-100">
                        <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                    </a>
                }
            </div>
        </aside>

        <main class="main-content flex-grow-1">
            <header class="main-header d-flex justify-content-end align-items-center px-4 py-3">
                @* Espacio para futuros botones *@
            </header>

            <div class="container-fluid px-4 pb-2 flex-grow-1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted text-center py-2 small">
                &copy; @DateTime.Now.Year - SwimRoomWeb
            </footer>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
