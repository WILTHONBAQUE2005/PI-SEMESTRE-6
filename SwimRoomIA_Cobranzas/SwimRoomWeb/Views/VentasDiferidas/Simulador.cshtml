@model SwimRoomWeb.Models.VentaDiferidaCreateViewModel

@{
    ViewData["Title"] = "Simulador de riesgo de mora";
    var resultado = ViewBag.ResultadoSimulacion as SwimRoomWeb.Models.RiesgoResponse;
    string? error = ViewBag.ErrorSimulacion as string;
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title mb-3">Escenario de simulación</h5>
                <p class="text-muted">
                    Ajuste los parámetros de la venta diferida para estimar el nivel de riesgo
                    <strong>sin registrar</strong> al cliente en la base de datos.
                </p>

                <hr />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-action="Simulador" method="post">
                    <div class="mb-3">
                        <label asp-for="Nombres" class="form-label"></label>
                        <input asp-for="Nombres" class="form-control" />
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellidos" class="form-label"></label>
                        <input asp-for="Apellidos" class="form-control" />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label"></label>
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MontoCompra" class="form-label"></label>
                        <input asp-for="MontoCompra" class="form-control" />
                        <span asp-validation-for="MontoCompra" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NumCuotas" class="form-label"></label>
                        <select asp-for="NumCuotas" class="form-select">
                            <option value="">Seleccione...</option>
                            <option value="3">3 cuotas</option>
                            <option value="6">6 cuotas</option>
                            <option value="9">9 cuotas</option>
                            <option value="12">12 cuotas</option>
                            <option value="18">18 cuotas</option>
                            <option value="24">24 cuotas</option>
                            <option value="32">32 cuotas</option>
                        </select>
                        <span asp-validation-for="NumCuotas" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IngresoMensual" class="form-label"></label>
                        <input asp-for="IngresoMensual" class="form-control" />
                        <span asp-validation-for="IngresoMensual" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiasAtrasoMax" class="form-label"></label>
                        <input asp-for="DiasAtrasoMax" class="form-control" />
                        <span asp-validation-for="DiasAtrasoMax" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PorcentajeCuotasPagadas" class="form-label"></label>
                        <input asp-for="PorcentajeCuotasPagadas" class="form-control" />
                        <span asp-validation-for="PorcentajeCuotasPagadas" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            Simular riesgo
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Volver al panel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-3">
        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger">@error</div>
        }
        else if (resultado != null)
        {
            var badgeClass = resultado.nivel_riesgo switch
            {
                "alto" => "badge bg-danger",
                "medio" => "badge bg-warning text-dark",
                "bajo" => "badge bg-success",
                _ => "badge bg-secondary"
            };
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title mb-3">Resultado de simulación</h5>
                    <p class="mb-1 text-muted">Probabilidad de mora estimada:</p>
                    <h2 class="fw-bold mb-3">@resultado.probabilidad_mora.ToString("P2")</h2>

                    <p class="mb-1 text-muted">Nivel de riesgo:</p>
                    <span class="@badgeClass" style="font-size: 1rem;">
                        @resultado.nivel_riesgo.ToUpperInvariant()
                    </span>

                    <p class="mt-3 text-muted">
                        Use este resultado para ajustar el monto, número de cuotas o políticas de aprobación
                        antes de registrar la venta real en el sistema.
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Ingrese los datos a la izquierda y presione <strong>Simular riesgo</strong> para ver el resultado del modelo de IA.
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
